<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/cardview_dark_background"
        app:cardCornerRadius="@dimen/_28sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_5sdp">

            <ImageView
                android:id="@+id/event_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/dark_gd"
                app:srcCompat="@drawable/machine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_tv"
                android:text="Event Title"
                android:fontFamily="sans-serif"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_12sdp"
                android:textColor="@color/app_background"
                android:textSize="@dimen/_36ssp"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:layout_height="wrap_content"
                android:text="2022-8-1"
                android:textColor="#DFDCDC"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/_58sdp"
                android:layout_marginStart="@dimen/_12sdp"/>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>